<h1>Conform You Booking</h1>



<%= form_with(scope: :session, url: checkuser_path) do |f| %>
 
<div class="form-group">
  <%= f.label :username %><br/>
  <%= f.text_field :username, class: "form-control" %>
</div>
 

 
<div class="form-group">
  <%if logged_in?%>
    <a href="/confirmuser/<%= current_user.username %>" class="btn btn-primary" role="button" action=f.submit % >Confirm</a>
    <% end %>
</div>


 
<% end %>